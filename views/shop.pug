extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/products.css")    
       
block content 
    main
        if prods.length > 0
            .grid
                each products in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{ products.title } 
                            .card__image
                                img(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQseMzekcv18rkOFck4CqSy-HJbPcR5VypARPgRNpSwoUp3dMjWDQ", alt="A Book")
                            .card__content
                                h2.product__price $19.99
                                p.product__description A very interesting book about so many even more interesting things!
                            .card__actions
                                button.btn Add to Cart
        else 
            h1 No Products Yet    